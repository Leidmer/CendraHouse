body
    background-color #f5f6fa
    font-size 14px;
    font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px

.mtop16
    margin-top 16px

.wrapper
    min-height 100vh
    overflow hidden


.sidebar
    background-color white
    min-height 100vh
    .section-top
        background-color #B6E4FC
        box-shadow 0 0.25rem 0.5rem rgba(0,0,0, 0.15)
    .user
        color #5068A9 !important
        padding 16px
        a
            color #324E7B
            font-size 1.2em
    .main
        display block
        margin-top 8px
        ul
            li
                margin-bottom 4px
                a
                    color #8998AC !important
                    display block
                    font-size 1.1em
                    padding 12px 12px
                    i
                        margin-right 10px
                    &:hover
                        background-color #B6E4FC
                        box-shadow 0 0.25rem 0.5rem rgba(0,0,0, 0.15)
                        text-decoration none
                a.active
                    background-color #B6E4FC
                    box-shadow 0 0.25rem 0.5rem rgba(0,0,0, 0.15)
                    text-decoration none
                

.navbar
    background-color #B6E4FC
    a
        color #5068A9 !important
.page
    padding-top 16px
    padding-bottom 16px
    .breadcrumb
        background-color white
        box-shadow 0 0.25rem 0.5rem rgba(0,0,0, 0.10) !important
        .breadcrumb-item
            a
                &:hover
                    text-decoration none
    .panel
        background-color white
        border-radius 6px
        border-bottom 3px solid #B6E4FC
        width 100%
        .header
            border-bottom 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px
            .nav
                .nav-link
                    border 1px solid #B6E4FC
                    margin-right 8px
                    &:hover
                        background-color #B6E4FC
                        color #5068A9

.opts
    a
        border-radius 4px
        border 1px solid #dedede
        display inline-block
        padding 8px 12px

.property_gallery
    overflow hidden
    .btn-submit
        display block
        margin-right 1%
        width 100%
        a
            border 1px dashed #6666 !important
            border-radius 4px
            color #5068A9
            display block
            font-size 1.5em
            text-align center
            padding 12px
            width 100%
            &:hover
                background-color #B6E4FC
                color #FFF
    .thumbs
        overflow hidden
        .thumb
            float left
            position relative
            margin-bottom 16px
            width 40%
            a
                background-color rgba(0,0,0, .5)
                display inline-block
                color  #ffffff
                padding 6px
                border-radius 4px
                position absolute
                bottom 8px
                right 25px
            img
                width 85%
                border-radius 4px
            &:nth-child(odd)
                margin-right: 1%

.page_user
    .mini_profile
        .avatar
            display block
            margin 0px auto
            border-radius 50%
            width 150px
        .info
            background-color #fff
            span
                display block
                font-size 1.1em
                width 100%
            span.title
                font-weight bold
                margin-top 16px
        .btn
            width 100%
